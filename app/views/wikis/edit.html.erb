<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guideline for Wiki</p>
    <ul>
      <li>Make it Informative</li>
      <li>Back up all points with facts</li>
      <li>Reference work correctly</li>
      
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placholder: "Enter wiki content" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% if current_user && (current_user.admin? || current_user.premium?) %>
        <div class="form-group">
          <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public wiki
          <% end %>
        </div>
        <% if current_user && (current_user.admin? || current_user.premium?) %>
        <div class="form-group">
          <%= link_to "Manage Collaborators", collaborators_path(wiki_id: @wiki.id) %>
        </div>
        <% end %>
        <% end %>
    <% end %>
  </div>
</div>
