<h1>My Wikis</h1>

<%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>

<table class="table table-bordered">
  <tbody>
<% @wikis.each do |wiki| %>

      <tr>
        <td class="col-md-6"><%= link_to wiki.title, wiki %></td>
        <td class="col-md-4"><%= "User: #{wiki.user.email}" %></td>
        <td class="col-md-1"><%= link_to "Edit", edit_wiki_path(wiki)%></td>
        <td class="col-md-1"><%= link_to "Delete", wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'} %></td>
      </tr>
    </div>

<% end %>
</tbody>
</table>
