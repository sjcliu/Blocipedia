<h1>My Wikis</h1>

<% @wikis.each do |wiki| %>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td class="col-md-8"><%= link_to wiki.title, wiki %></td>
        <td class="col-md-2"><%= link_to "Edit", edit_wiki_path(wiki)%></td>
        <td class="col-md-2"><%= link_to "Delete", @wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'} %></td>
      </tr>
    </div>
    </tbody>
  </table>
<% end %>

<%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
